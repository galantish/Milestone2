<BorderPane prefHeight="300" prefWidth="500" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.111" fx:controller="view.MyView">
   <left>
      <VBox prefHeight="200.0" prefWidth="84.0" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
             <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="60.0" text="Start" />
             <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="60.0" text="Stop" />
             <Button onAction="#exit" mnemonicParsing="false" prefHeight="25.0" prefWidth="60.0" text="Exit" />
             <Label text="Time" prefHeight="10" textFill="RED" textAlignment="CENTER" />
             
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </left>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#openFile" text="Open" />
              	  <MenuItem mnemonicParsing="false" onAction="#saveFile" text="Save" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <bottom>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Label prefHeight="17.0" prefWidth="44.0" text="Status">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Label>
			<MediaView fx:id="mediaView" fitHeight="5" fitWidth="5" />
         </children>
      </HBox>
   </bottom>
   <center>
      <SokobanDisplayer fx:id="levelDisplayer" height="500" width="500" BorderPane.alignment="CENTER" wallFileName="./resources/wall2.jpg" playerFileName="./resources/player3.jpg" boxFileName="./resources/box2.jpg" targetFileName="./resources/target.jpg"  />
   </center>
</BorderPane>
